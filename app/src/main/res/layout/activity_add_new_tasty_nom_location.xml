<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewTastyNomLocation">

    <TextView
        android:id="@+id/addNewTastyNomPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_gf_tasty_nom_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToAllNomPlacesFromAddNewPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/all_gf_nom_places"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewTastyNomPageTitle" />

    <Button
        android:id="@+id/goToMainActivityFromAddNewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToAllNomPlacesFromAddNewPlace" />

    <EditText
        android:id="@+id/businessAddressInput"
        android:layout_width="382dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:hint="@string/business_address"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessNameInput" />

    <EditText
        android:id="@+id/businessNameInput"
        android:layout_width="378dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:hint="@string/business_name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToMainActivityFromAddNewLocation" />

    <Button
        android:id="@+id/addBusinessDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessAddressInput" />

</androidx.constraintlayout.widget.ConstraintLayout>